<%- include("./partials/message.ejs") %>
<form class="mt-4 p-3" action="/stories/new/" method="post">
  <div class="mb-4">
    <label for="title" class="form-label">Story Title</label>
    <br />
    <input type="text" id="title" name="title" size="40" class="form-control" />
  </div>
  <div class="mb-4">
    <label for="description" class="form-label">Story Description</label><br />
    <textarea
      name="description"
      id="description"
      cols="40"
      rows="15"
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary mx-auto" style="display: block">
    Save
  </button>
</form>
